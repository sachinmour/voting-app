doctype html
html
  head
    title freeCodeCamp VOTING APP
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/assets/css/main.css')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js')
  body
    #line
    #page
      #header
        #auth
          a 
            i.fa.fa-facebook
          a 
            i.fa.fa-twitter
          a 
            i.fa.fa-google
        #local
          p 
            a(href="/login")
              | LOGIN 
            span or 
            a(href="/signup")
              | REGISTER
      #voting
        #icon
          a
            i.fa.fa-thumbs-up
        #name
          p
            | VOTE
      #main
        p
          | Select a poll to see the results and vote, or sign-in to make a new poll.
      hr
      ul#polls
        a.poll
          p Who is your favourite super hero?
        a.poll
          p Who is your favourite super hero?
