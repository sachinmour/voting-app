doctype html
html
  head
    title FREECODECAMP VOTING APP
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/assets/css/main.css')
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.2.2.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js')
  body
    #line
    #page
      if !user
        #header
          #local
            p 
              a(href="/login")
                | LOGIN 
              span or 
              a(href="/signup")
                | REGISTER
      else
        #authenticated
          a(href="/polls")
            | My Polls
          a(href="/poll/new")
            | New Poll
          a
            - if (user.local.name)
                | #{user.local.name}
            - else if (user.facebook.name)
                | #{user.facebook.name}
            - else if (user.twitter.displayName)
                | #{user.twitter.displayName}
            - else if (user.google.name)
                | #{user.google.name}
            span
              |  
              i.fa.fa-caret-down
          #dropdown.hidden
            a(href="/profile")
              | Profile
            a(href="/logout")
              | Log Out
        #voting
          #icon
            a(href="/")
              i.fa.fa-thumbs-up
          #name
            p
              a(href="/")
                | VOTE
      block content